{
    "bar":{
        "description": "A bar chart",
        "properties": {
            "title":{
                "type":"string"
                ,"required":false
            }
            ,"width":{
                "type":"integer"
                ,"default":960
            }
            ,"height":{
                "type":"integer"
                ,"default":960
            }
            ,"padding_top":{
                "type":"integer"
                ,"default":20
            }
            ,"padding_right":{
                "type":"integer"
                ,"default":100
            }
            ,"padding_bottom":{
                "type":"integer"
                ,"default":100
            }
            ,"padding_left":{
                "type":"integer"
                ,"default":100
            }
            ,"x_indicator":{
                "type":"indicator"
            }
            ,"y_indicator":{
                "type":"indicator"
            }
            ,"sort":{
                "type":"radio"
                ,"choices":[["yasc","Y ascending"],["ydes","Y descending"],["xasc","X ascending"],["xdes","X descending"]]
                ,"required":false
            }
            ,"x_maximum":{
                "type":"radio"
                ,"choices":[["auto","Automatic"],["manual","Manual (define below)"]]
                ,"default":"auto"
            }
            ,"x_maximum_value":{
                "type":"float"
            }
            ,"filter_by":{
                "type":"indicator"
            }
            ,"filter_selection":{
                "type":"string"
                ,"required":false
            }
            ,"colour":{
                "type":"string"
                ,"default":"#e84439"
            }
            ,"x_label":{
                "type":"string"
                ,"required":false
            }
            ,"y_label":{
                "type":"string"
                ,"required":false
            }
            ,"x_text_rotation":{
                "type":"integer"
                ,"default":45
            }
            ,"labels_on_chart":{
                "type":"boolean"
                ,"default":false
            }
            ,"label_font_size":{
                "type":"integer"
                ,"default":10
            }
            ,"label_format":{
                "type":"string"
                ,"default":",.2f"
            }
            ,"inject_css":{
                "type":"string"
                ,"required":false
            }
            ,"save_as_template":{
                "type":"boolean"
                ,"default":false
            }
        }
    }
}